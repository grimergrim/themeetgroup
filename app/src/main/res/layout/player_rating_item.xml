<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_small_height"
    android:layout_marginStart="@dimen/default_margin_full"
    android:layout_marginTop="@dimen/default_margin_half"
    android:layout_marginEnd="@dimen/default_margin_full"
    android:layout_marginBottom="@dimen/default_margin_half">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_full"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/list_item_title_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_of_wins_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Michael" />

    <TextView
        android:id="@+id/number_of_wins_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_full"
        android:text="@string/wins_title"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_of_wins"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_of_wins"
        android:layout_width="@dimen/list_item_number_default_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_full"
        android:gravity="center"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_of_games_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="23234" />

    <TextView
        android:id="@+id/number_of_games_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_full"
        android:text="@string/games_title"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_of_games"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_of_games"
        android:layout_width="@dimen/list_item_number_default_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_full"
        android:layout_marginEnd="@dimen/default_margin_half"
        android:gravity="center"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="87342" />

</androidx.constraintlayout.widget.ConstraintLayout>